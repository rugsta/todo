<div class="container">
  <div class="form-group">
  <h2>New User</h2>
  <%= simple_form_for @user do |f| %>

    <div class="form-group">
      <label>Name</label>
      <%= f.input :name, label: false, :input_html => {:maxlength => 255, :style=> 'width: 450px'}%>
    </div>

    <div class="form-group">
      <label>Email</label>
      <%= f.input :email, label: false, :input_html => {:maxlength => 255, :style=> 'width: 450px'}%>
    </div>

    <div class="form-group">
      <label>Password</label>
      <%= f.input :password, label: false, :as => :password, :input_html => {:maxlength => 255, :style=> 'width: 450px'} %>
    </div>

    <div class="form-group">
      <label>Confirm Password</label>
      <%= f.input :password_confirmation, label: false, :as => :password, :input_html => {:maxlength => 255, :style=> 'width: 450px'} %>
    </div>

    <div class="form-group">
            <%= f.button :submit, class: "btn btn-primary"%>
    </div>


  <% end %>
  
  </div>
</div>

